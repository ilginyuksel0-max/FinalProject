<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2001/xaml"
             x:Class="MerhabaDunya.MainPage"
             Title="Kitaplık Yönetimi">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            <Label Text="Yeni Kitap Ekle" FontSize="24" HorizontalOptions="Center" />
            
            <Entry x:Name="BookTitleEntry" Placeholder="Kitap Başlığı" />
            <Entry x:Name="AuthorEntry" Placeholder="Yazar" />
            
            <Button Text="Veritabanına Kaydet" 
                    Clicked="OnSaveClicked" 
                    BackgroundColor="#512BD4" 
                    TextColor="White" />

            <BoxView HeightRequest="1" Color="Gray" Margin="0,10" />

            <Label Text="Kayıtlı Kitaplar" FontSize="20" />
            <CollectionView x:Name="BooksList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10" Padding="5">
                            <Label Text="•" VerticalOptions="Center" />
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="-" />
                            <Label Text="{Binding Author}" Italic="True" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>